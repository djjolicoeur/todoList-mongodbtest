<link href="/stylesheets/textile-editor.css" media="screen" rel="stylesheet" type="text/css" />
<script src="/javascripts/textile-editor.js" type="text/javascript"></script>


<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
      <%= f.label :priority %><br />
      <%= f.select :priority, [1,2,3,4,5] %>
    </div>
    <div class="field">
      <%= f.label :description %><br />
      <%= f.textile_editor :description %>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>


<%= textile_editor_initialize(:framework => :jquery) %>